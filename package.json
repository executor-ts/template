{
  "name": "executor-ts-template",
  "version": "1.0.0",
  "description": "A robust TypeScript template for Executor environments, utilizing rbxts-bundler for compilation.",
  "scripts": {
    "build": "rbxtsc",
    "watch": "rbxtsc -w",
    "rojo": "node -e \"require('fs').mkdirSync('dist', {recursive: true})\" && rojo build -o dist/build.rbxm",
    "bundle:dev": "rbxts-bundler -i dist/build.rbxm -o dist/development.luau",
    "bundle:prod": "rbxts-bundler -i dist/build.rbxm -o dist/production.luau -r",
    "bundle": "npm run bundle:dev -s && npm run bundle:prod -s",
    "deploy": "npm run build -s && npm run rojo -s && npm run bundle -s"
  },
  "keywords": [],
  "author": "terminalvibes",
  "license": "MIT",
  "devDependencies": {
    "@executor-ts/types": "^1.0.2",
    "@rbxts/compiler-types": "^3.0.0-types.0",
    "@rbxts/types": "^1.0.896",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-roblox-ts": "^1.3.1",
    "prettier": "^3.7.4",
    "roblox-ts": "^3.0.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@executor-ts/services": "^1.1.0"
  }
}
